{
  "name": "Translate-Helper",
  "productName": "字幕组机翻小助手",
  "version": "1.0.0",
  "license": "MIT",
  "description": "减少打字疲劳",
  "author": "糖醋陈皮 <guokrfans@gmail.com>",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "yourappid",
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "window":{
          "x": 240,
          "y": 150
      },
      "contents": [
        {
          "x": 110,
          "y": 150
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "ass-parser": "^0.1.2",
    "ass-stringify": "^0.1.3",
    "electron-reload": "^1.2.2",
    "jquery": "^3.2.1",
    "normalize.css": "^7.0.0",
    "subtitles-parser": "0.0.2"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}